---
layout: base.njk
---

<!-- Title -->
<input type="checkbox" id="start">
<label for="start">
  <div>
    <h1><b>G</b>L<span>Y</span>PH <b><i>E</i></b>SCAPE</h1>
    <p>Choose the mismatched mirrored glyph to proceed to the next puzzle.<br>Complete 10 puzzles in 60 seconds to win.</p>
    <h2>Click anywhere to begin!</h2>
    <footer>Gamedev.js Jam 2021 | Daniel Marino</footer>
  </div>
</label>

<section>
  <!-- Puzzles -->
  {% for puzzle in puzzles %}
    {% set p = loop.index %}

    {% for glyph in puzzle.patterns %}
      <input class="p{{ p }} g{{ loop.index }}" id="p{{ p }}g{{ loop.index }}" name="p{{ p }}" type="radio">
      <label class="p{{ p }} g{{ loop.index }} h{{ loop.index }}" for="p{{ p }}g{{ loop.index }}" data-glyph="{{ glyph[1] }}">{{ glyph[0] }}</label>
      <div class="p{{ p }} r{{ loop.index }}"><em>{{ glyph[0] }}</em></div>
    {% endfor %}

    <h3 class="p{{ p }} g{{ loop.index }}">Puzzle {{ loop.index }} / {{ puzzles.length }}</h3>
  {% endfor %}

  <!-- Timer -->
  <div id="timer">
    <div class="fill"></div>
    <img src="img/timer.png" width="400" height="33">
  </div>

  <!-- Win -->
  <div id="win">
    <div>
      <h1>You Win!</h1>
      <p>Refresh the browser to play again</p>
    </div>
  </div>

  <!-- Lose -->
  <div id="lose">
    <div>
      <h1>You Lose!</h1>
      <p>Refresh the browser to play again</p>
    </div>
  </div>
</section>

<hr>
