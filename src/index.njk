---
layout: base.njk
---

<!-- Title -->
<input type="checkbox" id="start" autofocus>
<label for="start">
  <div>
    <h1>
      <div><b>H</b>iero</div>
      <div><em><b>H</b>iero</em></div>
    </h1>
  </div>
</label>

<embed src="sound/wahh.ogg" width="0" height="0">

<section>
  <embed class="music" src="sound/percussion.ogg" width="0" height="0">

  <!-- Puzzles -->
  {% for puzzle in puzzles %}
    {% set p = loop.index %}

    {% for glyph in puzzle.patterns %}
      <input class="p{{ p }} g{{ loop.index }} {% if loop.index == 1 %}w1{% endif %}" id="p{{ p }}g{{ loop.index }}" type="checkbox">
      <label class="p{{ p }} g{{ loop.index }} h{{ loop.index }}" for="p{{ p }}g{{ loop.index }}" data-glyph>{{ glyph[0] }}</label>
      <div class="p{{ p }} r{{ loop.index }}"><em><i>{{ glyph[1] }}</i></em></div>
      {% if loop.index != 1 %}
        <embed src="sound/bou.ogg" width="0" height="0">
      {% endif %}
    {% endfor %}

    <h3 class="p{{ p }} g{{ loop.index }}">Puzzle {{ loop.index }} / {{ puzzles.length }} — Select the mismatched hieroglyph</h3>
    <embed class="s{{ p }}" src="sound/ding.ogg" width="0" height="0">
  {% endfor %}

  <!-- Timer -->
  <div id="timer">
    <div class="fill"></div>
    <img src="img/timer.webp" width="400" height="33">
  </div>

  <!-- Win -->
  <div id="win">
    <div>
      <div class="card">
        <div class="card-inner">
          <div class="card-front">𓀠</div>
          <div class="card-back">
            <div>
              “Celebrate”
              <small>Gamedev.js Jam 2021 <br> Daniel Marino</small>
            </div>
          </div>
        </div>
      </div>

      <footer>
        Refresh the browser to play again
        <embed src="sound/win.ogg" width="0" height="0">
      </footer>
    </div>
  </div>

  <!-- Lose -->
  <div id="lose">
    <div>
      <div class="card">
        <div class="card-inner">
          <div class="card-front">𓀿</div>
          <div class="card-back">
            <div>
              “Death”
              <small>Gamedev.js Jam 2021 <br> Daniel Marino</small>
            </div>
          </div>
        </div>
      </div>

      <footer>
        Time’s up. Refresh the browser to try again
        <embed src="sound/lose.ogg" width="0" height="0">
      </footer>
    </div>
  </div>

  <!-- Lose Unchecked -->
  <div id="lose-checked">
    <div>
      <div class="card">
        <div class="card-inner">
          <div class="card-front">𓀿</div>
          <div class="card-back">
            <div>
              “Death”
              <small>Gamedev.js Jam 2021 <br> Daniel Marino</small>
            </div>
          </div>
        </div>
      </div>

      <footer>
        Too many mistakes. Refresh the browser to try again.
        <embed src="sound/lose.ogg" width="0" height="0">
      </footer>
    </div>
  </div>

  <div class="pulse"><div></div></div>
</section>

<div class="grain"><div></div></div>
